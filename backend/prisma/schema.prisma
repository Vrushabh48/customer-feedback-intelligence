generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  passwordHash    String?
  emailVerified   Boolean  @default(false)
  name            String?
  image           String?
  provider        AuthProvider @default(CREDENTIALS)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sessions        Session[]
  emailTokens     EmailToken[]
}

enum AuthProvider {
  CREDENTIALS
  GOOGLE
}

model Session {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])

  refreshTokenHash String
  userAgent       String
  ipAddress       String
  device          String?

  isRevoked       Boolean  @default(false)
  expiresAt       DateTime

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}

model EmailToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  type      EmailTokenType
  tokenHash String
  expiresAt DateTime
  used      Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([userId, type])
}

enum EmailTokenType {
  VERIFY_EMAIL
  RESET_PASSWORD
}
